#!/usr/bin/env python3
"""Hanirizer CLI - Network Configuration Sanitizer"""

if __name__ == "__main__":
    import sys
    from pathlib import Path

    # Add project root to path
    project_root = Path(__file__).parent.resolve()
    sys.path.insert(0, str(project_root))

    # Import and run
    try:
        from src.cli import main
        sys.exit(main())
    except ImportError as e:
        print(f"Error: Failed to import hanirizer modules: {e}", file=sys.stderr)
        print(f"\nPlease ensure all dependencies are installed:", file=sys.stderr)
        print(f"  pip3 install --user click pyyaml pyminizip", file=sys.stderr)
        sys.exit(1)
    except Exception as e:
        print(f"Error: {e}", file=sys.stderr)
        sys.exit(1)
